%h1  Articles
= link_to 'New Article', new_article_path
%br
- @articles.each do |article|
  .row
    %div{:class => "col-md-7 col-md-offset-1"}
      %h3 
        =article.title
      %p
        = simple_format(truncate(article.content,length: 50, omission: "..."))
      = link_to 'show', article_path(article)

